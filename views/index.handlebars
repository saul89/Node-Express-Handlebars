<h1>Eat-Da-Burger!</h1>

<img src="/assets/img/hamburger.png" alt="burger">

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}
        <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
            Devour it!
        </button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<form class="create-form">

    <div class="form-group">
        <textarea class="form-control" rows="1" id="burger"></textarea>
    </div>

    <button type="submit">Submit</button>
</form>